<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ChatLock Progress Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f1f4f7;
      font-family: 'Poppins', sans-serif;
    }
    .dashboard {
      padding: 30px;
    }
    .user-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      margin-bottom: 20px;
      transition: 0.3s;
    }
    .user-card:hover {
      transform: translateY(-5px);
    }
    .user-name {
      font-size: 24px;
      font-weight: 600;
      color: #333;
    }
    .task-list {
      margin-top: 15px;
    }
    .task-item {
      background: #eef2f7;
      padding: 10px 15px;
      border-radius: 8px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

<div class="container dashboard">
  <h1 class="mb-5 text-center">ChatLock - User Progress Dashboard</h1>

  <!-- User: Irfan -->
  <div class="user-card">
    <div class="user-name">Irfan</div>
    <div class="task-list">
      <% if (irfanTasks.length > 0) { %>
        <% irfanTasks.forEach(task => { %>
          <div class="task-item">
            <strong><%= task.task %>:</strong> <%= task.description %>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-muted">No tasks submitted yet.</div>
      <% } %>
    </div>
  </div>

